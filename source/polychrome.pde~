class Appearance
{
	Color col;

	Appearance ()
	{
		switch (random (4))
		{
			case 0:
			     col = color (255, 0, 0, 240);
			     break;
			case 1:
			     col = color (255, 255, 0, 0);
			     break;
			case 2:
			     col = color (255, 0, 255, 0);
			     break;
			case 3:
			     col = color (0, 0, 0, 245);
			     break;
		}
	}	

	void draw (Form f)
	{
		fill (col);
		f.draw ();
	}
}
