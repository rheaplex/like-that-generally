int MODE = P2D;

int KIND_COUNT = 3;

class Form
{
	float size;
	float x;
	float y;
	int kind;

	Form ()
	{
		x = random (min_object_x, max_object_x); 
		y = random (min_object_y, max_object_y); 
		size = random (min_object_start_t, max_object_start_t);
		kind = random (KIND_COUNT);
	}

	void draw ()
	{
		pushMatrix ();
  		translate (x, y);
		rectMode (CENTER);
		ovalMode (CENTER);
		switch (kind)
		{
			case 1:

			     break;
			case 2:
	        	     rect (x, y, size, size);
			     break;
			case 3:
			     
			     break;
  		popMatrix ();
	}
}

