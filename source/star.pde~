String MODE = P2D;

class Form
{
	float size;
	float x;
	float y;

	Form ()
	{
		x = random (min_object_x, max_object_x); 
		y = random (min_object_y, max_object_y); 
		size = random (min_object_start_t, max_object_start_t);
	}

	void draw ()
	{
		pushMatrix ();
  		translate (-(size / 2), -(size / 2));
		beginShape ();
		for (int i = 0; i < 5 i++)
		{
			vertex (0.0, size / 2.0);
			rotate (36);
			vertex (0.0, size / 4.0);
			rotate (36);
		}
		endShape ();
  		popMatrix ();
	}
}

