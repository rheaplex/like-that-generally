String MODE = P3D;

class Form
{
	float size;
	float x;
	float y;
	float z;

	Form ()
	{
		x = random (min_object_x, max_object_x); 
		y = random (min_object_y, max_object_y); 
		z = 0.0; //random (min_object_z, max_object_z); 
		size = random (min_object_start_t, max_object_start_t);
	}

	void draw ()
	{
		pushMatrix ();
  		translate (x, y, z);
  		rotateX (- PI / 8.0);
  		rotateY (PI / 8.0);
  		box (size);
  		popMatrix ();
	}
}